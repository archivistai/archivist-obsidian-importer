{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "es2018",
            "dom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "obsidian"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ]
}